<%   String.prototype.capitalize = function() {
    return this.charAt(0).toUpperCase() + this.slice(1);
}%>
<!--MANAGE LISTING-->
<div id="manage-listing" class="w3-container">
  <!-- <h2>Manage Listing</h2> -->
  <p class="w3-padding-left w3-opacity"><b>Manage listing property</b></p>
  
  <div class="w3-row w3-section w3-border">
    
      <!--  <div class="w3-col m2">
        <select class="w3-text-blue-grey w3-hover-text-black w3-select w3-border-0">
          <option>ID</option>
          <option>Tipe</option>
          <option>Judul</option>
        </select>
      </div> -->
      <div class="w3-col w3-right" style="width:50px">
        <button class="w3-blue-grey w3-button w3-block w3-paddingX"><i class="fa fa-search"></i></button>
      </div>
        <div class="w3-rest">
        <input class="w3-hover-light-grey w3-input w3-border-0" type="text" name="" placeholder="Cari.." id="search-filter">
      </div>
    
    
  </div>

  <div class="w3-row">

    <table class="w3-card w3-table w3-hoverable" id="properties-table">
      <tr class="w3-blue-grey">
        <th>ID</th>
        <th>Tipe</th>
        <th>Judul</th>
        <th>Harga</th>
        <th>Kota</th>
        <th>Provinsi</th>
        <th style="width:100px"></th>
      </tr>
      <%for(i=0;i<dataProperty.length;i++){%>
      <tr class="w3-text-grey w3-hover-green">
        <td style="vertical-align:middle; width:80px"><%=dataProperty[i].id%></td>
        <td style="vertical-align:middle"><%=dataProperty[i].type.capitalize()%></td>
        <td style="vertical-align:middle"><%=dataProperty[i].title%></td>
        <td style="vertical-align:middle">Rp. <%=dataProperty[i].price%></td>
        <td style="vertical-align:middle"><%=dataProperty[i].city%></td>
        <td style="vertical-align:middle"><%=dataProperty[i].province%></td>
        <td style="width:180px">
          <div class="w3-bar w3-center w3-right w3-margin-right ">
            <a href="/listing/detail/<%=dataProperty[i].id%>">
            <button class="w3-button w3-hover-white w3-hover-text-grey"><i class="fa fa-info"></i></button></a>
            <a href="/admin/listing/edit/<%=dataProperty[i].id%>">
            <button class="w3-button w3-hover-white w3-hover-text-grey"><i class="fa fa-pencil"></i></button></a>
            <button class="w3-button w3-hover-red" onclick="modalData('<%=dataProperty[i].id%>','<%=dataProperty[i].title%>')"><i class="fa fa-trash"></i></button>
          </div>
        </td>
      </tr>
      <%}%>
    </table>

  </div>

  <div class="w3-card w3-section w3-container">
    <p class="w3-text-blue-grey">Total Rows: <%=i%></p>
  </div>

</div>

<%- partial('../partials/modal-confirm-delete-listing.ejs') %>

<script>
  document.getElementById('search-filter').addEventListener('keyup',searchFilter);

  function searchFilter() {
  var input, filter, table, tr, td, i;
  input = document.getElementById("search-filter");
  filter = input.value.toUpperCase();
  table = document.getElementById("properties-table");
  tr = table.getElementsByTagName("tr");
  for (i = 1; i < tr.length; i++) {
    trd = tr[i];
    if (trd) {
      if (trd.innerHTML.toUpperCase().indexOf(filter) > -1) {
        tr[i].style.display = "";
      } else {
        tr[i].style.display = "none";
      }
    }
  }
}
</script>