<form action="<%=dataEdit?'/api/user/edit/'+dataEdit.no:'/api/user/insert'%>" method="POST" enctype="multipart/form-data">
	<div id="user-form" class="w3-padding w3-container" style="max-width: 700px;margin:auto;">
			<p class="w3-container w3-blue-grey w3-padding-16"><b><i class="fa fa-user"></i> Form User</b>
    	</p>
			<div class="w3-container w3-border">
					<p>
			  		<label class="w3-text-grey">Nama Lengkap</label>
						<input class="w3-input w3-border" type="text" name="name" value="<%=dataEdit?dataEdit.name:''%>">
					</p>
					<p>
			  		<label class="w3-text-grey">Nomor Indentitas (KTP/SIM)</label>
						<input class="w3-input w3-border" type="text" name="idNumber" value="<%=dataEdit?dataEdit.name:''%>">
					</p>
					<p>
						<label class="w3-text-grey">Email</label>
						<input class="w3-input w3-border" type="email" name="email" value="<%=dataEdit?dataEdit.email:''%>">
					</p>
					<p>
						<label class="w3-text-grey">Phone</label>
						<input class="w3-input w3-border" type="tel" name="phone" value="<%=dataEdit?dataEdit.phone:''%>">
					</p>
					<p>
						<label class="w3-text-grey">Username</label>
						<input class="w3-input w3-border" type="text" name="username" value="<%=dataEdit?dataEdit.username:''%>" autocomplete="off">
					</p>
					<p>
						<label class="w3-text-grey">Password</label>
						<input class="w3-input w3-border" type="password" name="password" value="<%=dataEdit?dataEdit.password:''%>" autocomplete="off">		
					</p>
					<p>
						<label class="w3-text-grey">Role</label>
						<select class="w3-select w3-border" name="role">
							<option value="<%=dataEdit?dataEdit.role:''%>"><%=dataEdit?dataEdit.role.capitalize():''%></option>
							<option value="member">Member</option>
							<option value="agent">Agen</option>
							<option value="administrator">Administrator</option>
						</select>		
					</p>
					<p>
						<label class="w3-text-grey">Status</label>
						<select class="w3-select w3-border" name="status">
							<option value="<%=dataEdit?dataEdit.status:''%>"><%=dataEdit?dataEdit.status.capitalize():''%></option>
							<option value="on">On</option>
							<option value="off">Off</option>
							<option value="pending">Pending</option>
						</select>		
					</p>
				
					<p>
       			<hr class="w3-grey" style="margin:0">
					</p>

				<p>
				<span class="w3-padding w3-grey">Foto Profil&nbsp;&nbsp;<i class="fa fa-file-image-o"></i></span>
				<input type="file" name="avatar" <%=dataEdit?'':'required'%>>
				</p>

			<div class="w3-bar w3-section w3-padding-16">
				<button class="w3-button w3-blue-grey w3-hover-green w3-right" style="width:70%">
    	  	<%-dataEdit?`<i class='fa fa-pencil'></i> Edit`:`<i class='fa fa-plus'></i> Tambah`%>
				</button>
				<button class="w3-button w3-light-grey w3-text-grey w3-right" style="width:30%" type="reset">Kosongkan</button>
			</div>

		</div>
	
	</div>
</form>