    </div>
    </form>
  </div>
</div>
<!--END SearchBox-->

<script async defer>
  var searchNavbar = document.getElementById('search-navbar');
  // setTimeout(function(){
  //   search-navbar.style.display='block';
  // },500);
  function showSearchPanel(){
    searchNavbar.className = searchNavbar.className.replace(' w3-animate-opacity','');
    document.getElementById('search-navbar').style.display='block';
    document.getElementById('main-navbar').style.display='none';
    document.getElementById('main-maps').style.paddingTop= "0";
  }
  function closeSearchPanel(){
    searchNavbar.className = searchNavbar.className.replace(' w3-animate-opacity','');
    document.getElementById('main-navbar').style.display='block';
    document.getElementById('search-navbar').style.display='none';
    document.getElementById('main-maps').style.paddingTop= "38px";
  }
</script>