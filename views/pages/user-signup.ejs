<%   String.prototype.capitalize = function() {
    return this.charAt(0).toUpperCase() + this.slice(1);
}%>
<div style="background: url('/img/building-1.jpg');background-size: cover;padding-top: 128px;padding-bottom: 128px">
<form action="/api/user-signup" method="POST" enctype="multipart/form-data">
		<div class="w3-content w3-card-4 w3-white" style="opacity:0.97;max-width:630px">
		 <div id="modal-login-header" class="w3-center" style="background-size:contain;"><br>
      <img src="/img/rumah2q-logo.png" style="width:35%">
      <!-- <p class="w3-xxlarge w3-margin w3-center w3-text-blue-grey" style="font-weight:bold">rumah<span class="w3-text-green">2Q</span></p> -->
      <hr>
    </div>
  <p class="w3-center w3-text-blue-grey" style="border-width:2px!important;margin-top: 0"><b>Signup User</b></p>

			<div class="w3-row w3-container">
			  <label class="w3-text-grey">Nama Lengkap</label>
				<input class="w3-input w3-border" type="text" name="name" value="" required>
				<label class="w3-text-grey">Email</label>
				<input class="w3-input w3-border" type="email" name="email" value="" required>
				<label class="w3-text-grey">Phone</label>
				<input class="w3-input w3-border" type="text" name="phone" value="" required>
				<label class="w3-text-grey">Username</label>
				<input class="w3-input w3-border" type="text" name="username" value="" required autocomplete="off">
				<label class="w3-text-grey">Password</label>
				<input class="w3-input w3-border" type="password" name="password" value="" required autocomplete="off" minlength="4">
				<!-- <input type="hidden" value="member" name="role"> -->
				<!-- <label class="w3-text-blue">Role</label>
				<select class="w3-select w3-border" name="role">
					<option value="member">Member</option>
					<option value="agen">agen</option>
					<option value="administrator">Administrator</option>
				</select> -->
				<p>
				<span class="w3-padding w3-light-grey w3-text-grey">Foto Profil&nbsp;&nbsp;<i class="fa fa-file-image-o"></i></span>
				<input type="file" name="avatar" required>
				</p>
				
			</div>
			<div class="w3-row w3-section w3-padding-16 w3-blue-grey">
				<button class="w3-btn w3-green w3-right w3-margin-right"><i class="fa fa-plus"></i> Buat Akun</button>
				<button class="w3-btn w3-blue-grey w3-right" type="reset">Kosongkan</button>
			  </div>
		</div>
  </form>
</div>