<%partial('../partials/helpers.ejs')%>
<%var row=1;%>

<%- partial('../partials/navbar-search.ejs')%>

<!--Listing Property-->
<div id="main" class="w3-margin-top" style="padding-top:38px!important">



  <%for(var i=0,len=dataListings.length;i<len;i++){%>
  <%if(i%2===0||i===0){%>
  <!--LISTING ROW-->
  <div class="Xw3-row-padding w3-content">
  <%}%>
  
     <!--LISTING CARD-->
    <div class="Xw3-col Xm6 w3-margin-bottom">
      <div class="w3-container w3-card w3-white" style="padding: 0">
        <div class="w3-col m7 w3-cell" style="/*width:50% ;height:300px ;background-image: url(<%=dataListings[i].pictures[0].path%>);background-position:center;background-size:cover;" ><a href="/listings/detail/<%=dataListings[i].id%>" title="<%=dataListings[i].status.capitalize()%> <%=dataListings[i].title%>">
          <img style="width:100%;height:300px;object-fit:cover;" class="w3-animate-opacity" src="<%=dataListings[i].pictures[0].path%>" alt="<%=dataListings[i].title%>" ></a>
        </div>
        <div class="w3-container w3-col m5 w3-text-grey w3-white w3-cell w3-cell-bottom" style="height:300px">
          <%var title=dataListings[i].title;%>
          <p title="<%=title%>" style="width:100%;white-space:nowrap;overflow: hidden;text-overflow:ellipsis">
            <b>
              <%=(i+1)+'. '%>
              <%=title%>
              <%//=(title.length>30)?title.substring(0,30)+'...':title%>
            </b>
          </p>
          <p class="w3-small" style="margin:-8px 0">
            <i class="fa fa-clock-o"></i>
            <span class="w3-tiny" style="padding-left:10px"> Posted on 
            <%=dataListings[i].createdAt.toDateString()%>
            </span>
          </p>
          <p>
            <i class="fa fa-home" style="padding-right:6px"></i>
            <span> 
              <%=dataListings[i].type.capitalize()%>
              <b><%=dataListings[i].status.capitalize()%></b>
            </span>
          </p>
          <%var address=dataListings[i].address;%>
          <p title="<%=address%>">
            <span style="width:100%;white-space:nowrap;display:block;overflow:hidden;text-overflow:ellipsis">
              <i class="fa fa-map-marker" style="padding-right:11px"></i>
              <%//=(address.length>35)?address.substring(0,35)+'...':address%>
              <%=address%>
            </span>
          </p>
          
          <div class="w3-margin-bottom">
            <span title="Luas Tanah"><i class="fa fa-map-signs" style="padding-right:4px"></i>
              <%=dataListings[i].lotSize%> m<sup>2</sup>
            </span>
            &nbsp;&nbsp;
            <span title="Luas Bangunan">
              <i class="fa fa-home"></i>
              <%=dataListings[i].buildingSize%> m<sup>2</sup>
            </span>
            &nbsp;&nbsp;
            <span title="Jumlah Kamar Tidur">
              <i class="fa fa-bed"></i>
              <%=dataListings[i].beds%>
            </span>
            &nbsp;&nbsp;
            <span title="Jumlah Kamar Mandi">
              <i class="fa fa-bath"></i>
              <%=dataListings[i].baths%>
            </span>
            &nbsp;&nbsp;
          </div>

          <p><i class="fa fa-money" style="padding-right:5px"></i>
            <span style="font-weight:bold">
              Rp. <%=dataListings[i].price.formatMoney(0,',','.')%>
            </span>
          </p>

          <hr>

          <div class="w3-bar w3-border w3-margin-bottom">
            <!-- <a href="javascript:void(0)">
            <button class="w3-bar-item w3-button " style="width:33.3%" title="Favorit"><i class="fa fa-star"></i> Favorit</button>
            </a> -->
            <a href="/agent/detail/<%=dataListings[i].agent.id%>">
            <button class="w3-bar-item w3-button w3-hover-blue" style="width: 50%" title="<%=dataListings[i].agent.name%>"><i class="fa fa-user"></i> Agen</button>
            </a>
            <a href="/listings/detail/<%=dataListings[i].id%>">
            <button class="w3-bar-item w3-button w3-hover-green" style="width: 50%" title="More information about this"><i class="fa fa-info"></i> Details</button>
            </a>
          </div>
        </div>
      </div>
    
    </div><!-- END LISTING CARD -->
  
  
  <%if(i%2!==0||i===1||i===dataListings.length-1){%>
  </div>
  <!--END LISTING ROW-->
  <%}%> 
  <%}%>
  </div>
<!--End-->
<%- partial('../partials/footer.ejs')%>
<%- partial('../partials/modal-login.ejs')%>

